{
  "compileOnSave": true,
  "compilerOptions": {
		"baseUrl": "./",
		"module": "es2015",
    "target": "es5",
    "sourceMap": true,
		"moduleResolution": "node",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
		"experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
		"lib": [
			"es2017"
		]
  },
	"exclude": [
		"node_modules"
	]
}
