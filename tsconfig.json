{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "experimentalDecorators": true,
    "sourceMap": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2017" ],
    "baseUrl": "src"
  },
  "include": [
    "./src/**/*.ts"
  ]
}
