{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir"    : "lib",
        "baseUrl"   : ".",
        "module"    : "es2020",
        "target"    : "es5",
        "downlevelIteration": true,
        "moduleResolution"              : "node",
        "stripInternal"                 : true,
        "emitDecoratorMetadata"         : true,
        "experimentalDecorators"        : true,
        "useDefineForClassFields"       : true,
        "allowSyntheticDefaultImports"  : true,
        "skipLibCheck"                  : true,
        "sourceMap"                     : true,
        "declaration"                   : false,
        "lib": [      
            "dom",
            "es2020"
        ],
        "paths": {
            "@/*": ["src/*"] 
        }
    },
    "exclude": [
        "node_modules"
    ]
}
