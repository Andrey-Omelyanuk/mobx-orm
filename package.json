{
  "name": "@Andrey-Omelyanuk/mobx-orm",
  "description": "Reactive ORM based on MobX",
  "version": "2.0.7",
  "license": "MIT",
  "author": "Andrey Omelyanuk",
  "repository": {
    "type": "git",
    "url": "https://github.com/Andrey-Omelyanuk/mobx-orm"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "dist/mobx-orm.js",
  "jsnext:main": "dist/mobx-orm.es2015.js",
  "typings": "dist/mobx-orm.d.ts",
  "dependencies": {
    "lodash"  : "^4.17.21", 
    "mobx"    : "~6.7.0"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "jest --testMatch='**/src/**/*.spec.ts' --watchAll",
    "test": "jest --testMatch='**/src/**/*.spec.ts' --coverage",
    "e2e": "jest --testMatch='**/e2e/**/*.ts'"
  },
  "devDependencies": {
    "typescript"              : "^5.5.4", 
    "tslint"                  : "^6.1.3", 
    "jest"                    : "^29.7.0", 
    "jest-environment-jsdom"  : "^29.7.0", 
    "ts-jest"                 : "^29.2.5", 
    "@types/jest"             : "^29.5.12", 

    "rollup"                    : "^2.75.5",
    "rollup-plugin-typescript2" : "^0.31.0",
    "@rollup/plugin-typescript" : "^8.3.2",
    "rollup-plugin-terser"      : "^7.0.2",
    "rollup-plugin-dts"         : "^4.2.2"
  },
  "engines": {
    "node": ">= 22.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "modulePaths": [
      "."
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}