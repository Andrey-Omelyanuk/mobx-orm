{
  "name"        : "mobx-orm",
  "description" : "Reactive ORM based on MobX",
  "version"     : "0.2.0",
  "license"     : "MIT",
  "author"      : "Andrey Omelyanuk",
  "repository"  : {
    "type": "git",
    "url" : "https://github.com/Andrey-Omelyanuk/mobx-orm"
  },
	"main"        : "dist/mobx-orm.js",
  "jsnext:main" : "dist/mobx-orm.es2015.js",
  "typings"     : "dist/mobx-orm.d.ts",
  "dependencies": {
    "mobx"  : "^5.15.7"
  },
  "scripts": {
    "build" : "rollup -c",
    "test"  : "jest --testMatch='**/src/**/*.spec.ts'",
    "e2e"   : "jest --testMatch='**/e2e/**/*.ts'"
  },
  "devDependencies": {
    "typescript"	      : "^4.1.3",
    "tslint"            : "^6.1.3",
		"jest"				      : "^26.6.3",
    "ts-jest"			      : "^26.4.4",
		"@types/jest"       : "^26.0.19",

    "rollup"                    : "^2.35.1",
    "rollup-plugin-typescript2" : "^0.29.0", 
    "rollup-plugin-terser"      : "^7.0.2",
    "rollup-plugin-dts"         : "^2.0.1"

  },
  "engines": {
    "node": ">= 8.0.0",
    "npm" : ">= 5.0.0"
  },
	"jest": {
    "testEnvironment": "node",
		"moduleFileExtensions"	: ["ts", "js", "json"],
		"moduleDirectories"			: ["node_modules"],
		"modulePaths"						: ["."],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
    }
	}
}
