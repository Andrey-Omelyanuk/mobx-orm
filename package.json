{
  "name"      : "z-data",
  "version"   : "0.1.1",
  "license"   : "MIT",
  "repository": "https://bitbucket.org/__Andrey/z-data",
	"main"      : "dist/z-data.js",
	"module"    : "dist/z-data.ts",
  "dependencies": {
		"mobx" : "5.9.4" 
  },
  "scripts": {
    "serve": "./node_modules/.bin/webpack-dev-server --progress --inline",
    "build": "./node_modules/.bin/webpack",
		"test" : "./node_modules/.bin/jest"
  },
  "devDependencies": {
    "typescript"	: "3.4.3",
    "tslint"			: "5.15.0",
		"jest"				: "24.7.1",
		"ts-jest"			: "24.0.2",

    "webpack"				: "4.29.6",
		"webpack-cli"		: "3.3.0",
    "ts-loader"			: "5.3.3",
    "tslint-loader"	: "3.5.4",

		"@types/jest"		: "24.0.11" 
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm" : ">= 5.0.0"
  },
	"jest": {
		"moduleFileExtensions"	: ["ts", "js", "json"],
		"moduleDirectories"			: ["node_modules"],
		"modulePaths"						: ["/src"],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
	}
