{
  "name"        : "mobx-orm",
  "description" : "Reactive ORM based on MobX",
  "version"     : "0.1.1",
  "license"     : "MIT",
  "author"      : "Andrey Omelyanuk",
  "repository"  : {
    "type": "git",
    "url" : "https://github.com/Andrey-Omelyanuk/mobx-orm"
  },
	"main"        : "dist/mobx-orm.js",
  "jsnext:main" : "dist/mobx-orm.es2015.js",
  "typings"     : "dist/mobx-orm.d.ts",
  "dependencies": {
		"mobx" : "^5.9.4" 
  },
  "scripts": {
    "build" : "rollup -c",
		"test"  : "jest"
  },
  "devDependencies": {
    "typescript"	: "3.4.3",
    "tslint"			: "5.15.0",
		"jest"				: "24.7.1",
    "ts-jest"			: "24.0.2",
		"@types/jest" : "24.0.11",

    "rollup"                    : "1.12.3",
    "rollup-plugin-typescript2" : "0.21.1", 
    "rollup-plugin-terser"      : "5.0.0",
    "rollup-plugin-dts"         : "0.15.1"

  },
  "engines": {
    "node": ">= 8.0.0",
    "npm" : ">= 5.0.0"
  },
	"jest": {
		"moduleFileExtensions"	: ["ts", "js", "json"],
		"moduleDirectories"			: ["node_modules"],
		"modulePaths"						: ["."],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/src|e2e/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
	}
}
