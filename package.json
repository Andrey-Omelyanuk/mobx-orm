{
  "name"        : "@Andrey-Omelyanuk/mobx-orm",
  "description" : "Reactive ORM based on MobX",
  "version"     : "1.0.0-beta5",
  "license"     : "MIT",
  "author"      : "Andrey Omelyanuk",
  "repository"  : {
    "type": "git",
    "url" : "https://github.com/Andrey-Omelyanuk/mobx-orm"
  },
  "publishConfig": {
    "registry":"https://npm.pkg.github.com"
  },
	"main"        : "dist/mobx-orm.js",
  "jsnext:main" : "dist/mobx-orm.es2015.js",
  "typings"     : "dist/mobx-orm.d.ts",
  "dependencies": {
    "mobx"  : "^6.3.0" 
  },
  "scripts": {
    "build" : "rollup -c",
    "dev"   : "jest --testMatch='**/src/**/*.spec.ts' --watchAll",
    "test"  : "jest --testMatch='**/src/**/*.spec.ts'",
    "e2e"   : "jest --testMatch='**/e2e/**/*.ts'"
  },
  "devDependencies": {
    "typescript"	      : "~4.2.4",
    "tslint"            : "~6.1.3",
		"jest"				      : "~26.6.3",
    "ts-jest"			      : "~26.5.4",
		"@types/jest"       : "~26.0.22",

    "rollup"                    : "~2.48.0",
    "rollup-plugin-typescript2" : "~0.30.0", 
    "rollup-plugin-terser"      : "~7.0.2",
    "rollup-plugin-dts"         : "~3.0.1" 
  },
  "engines": {
    "node": ">= 15.0.0"
  },
	"jest": {
    "testEnvironment": "node",
		"moduleFileExtensions"	: ["ts", "js", "json"],
		"moduleDirectories"			: ["node_modules"],
		"modulePaths"						: ["."],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
    }
	}
}
